<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/containerRelativeLayout"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/down_timeline"
        android:layout_width="2dp"
        android:layout_height="60dp"
        android:src="@drawable/down_timeline"
        android:contentDescription="@string/logo"
        android:layout_centerVertical="false"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="20dp"
        />

    <ImageView
        android:id="@+id/vignette_event"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:src="@drawable/vignette_event_disabled"
        android:contentDescription="@string/logo"
        android:layout_centerVertical="false"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="14dp"
        />

    <TextView
        style="@style/year_month"
        android:id="@+id/year_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_toRightOf="@id/down_timeline"/>

</RelativeLayout>