        android:layout_marginLeft="20px"/> style="@style/Buttons"-->
    <Button
        style="@style/Buttons"
        android:id="@+id/how_get_there"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/how_get_there"
        android:layout_toRightOf="@id/place_logo"
        android:layout_below="@id/place_address"
        android:layout_alignParentBottom="true" />

    <Button
        style="@style/Buttons"
        android:id="@+id/what_washere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/what_was_here"
        android:layout_toRightOf="@id/how_get_there"
        android:layout_below="@id/place_address"
        android:layout_alignParentBottom="true" />

    <ImageView
        android:id="@+id/place_fullness"
        android:layout_width="100px"
        android:layout_height="100px"
        android:padding="5px"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        />
</RelativeLayout>
