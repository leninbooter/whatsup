<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="Header">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@color/dark_gray</item>
    </style>

    <style name="Tittles">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SubTittles">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:color">#9c9c9c</item>
    </style>

    <style name="Addresses">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:color">#9c9c9c</item>
    </style>

    <style name="Controls">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:color">#04124f</item>
        <item name="android:shadowColor">#7F000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="Buttons">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:background">@drawable/button_custom</item>
        <item name="android:layout_margin">3px</item>
        <item name="android:padding">8px</item>
        <item name="android:minHeight">0px</item>
        <item name="android:clickable">true</item>
        <item name="android:enabled">true</item>
    </style>

    <style name="RL_item">
        <item name="android:padding">0dp</item>
    </style>

    <style name="year_month">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">italic|</item>
        <item name="android:background">#000000</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>


</resources>
